{
  "extends": "./tsconfig.generated.json",
  "compilerOptions": {
    "paths": { "@/*": ["./src/*"] }
  },
  "include": [
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.d.ts",
    "packages/**/env.d.ts",
    "packages/**/**/*.vue",
    "packages/ui/examples/**/*.ts",
    "packages/ui/examples/**/*.d.ts",
    "packages/ui/examples/**/*.vue"
  ],
  "exclude": ["templates/**/*"]
}
